# GitHub API Base URL
BASE_URL=https://api.github.com

# Optional: Specific organization to scan (if not provided, will scan all accessible orgs)
# GITHUB_ORG=your-org-name

# Optional: Google Cloud Storage bucket name
# BUCKET_NAME=your-bucket-name

# Log level
LOG_LEVEL=INFO

# Optional: Single token for backward compatibility
# GITHUB_TOKEN=ghp_yourtoken

# === Repository Access Tokens ===

# Tokens with full repo access (Use these only when necessary)
GITHUB_TOKENS_REPO=ghp_repo_token1,ghp_repo_token2

# Tokens with commit status access only
GITHUB_TOKENS_REPO_STATUS=ghp_status_token1,ghp_status_token2

# Tokens with deployment status access only
GITHUB_TOKENS_REPO_DEPLOYMENT=ghp_deploy_token1,ghp_deploy_token2

# Tokens with public repository access only
GITHUB_TOKENS_PUBLIC_REPO=ghp_public_token1,ghp_public_token2

# === Security Tokens ===

# Tokens with security events access (for vulnerability scanning)
GITHUB_TOKENS_SECURITY_EVENTS=ghp_security_token1,ghp_security_token2

# === Organization Access Tokens ===

# Tokens with read-only org access (for listing organizations and members)
GITHUB_TOKENS_READ_ORG=ghp_read_org_token1,ghp_read_org_token2,ghp_read_org_token3

# Tokens with write org access (if you need to modify organization settings)
GITHUB_TOKENS_WRITE_ORG=ghp_write_org_token1

# Tokens with admin org access (use only when necessary)
GITHUB_TOKENS_ADMIN_ORG=ghp_admin_org_token1

# === Workflow/Actions Tokens ===

# Tokens with workflow access (for GitHub Actions scanning)
GITHUB_TOKENS_WORKFLOW=ghp_workflow_token1,ghp_workflow_token2

# === Runner Management Tokens ===

# Tokens for managing organization runners
GITHUB_TOKENS_MANAGE_RUNNERS_ORG=ghp_runners_token1

# === User Data Tokens ===

# Tokens for reading user profile data
GITHUB_TOKENS_READ_USER=ghp_read_user_token1