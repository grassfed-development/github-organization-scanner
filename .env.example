# GitHub API Base URL (Default: https://api.github.com)
BASE_URL=https://api.github.com

# GitHub Personal Access Token (required)
# Required scopes: repo, read:org, security_events, workflow
GITHUB_TOKEN=ghp_your_token_here

# Optional: Specific organization to scan 
# If not provided, will scan all accessible organizations
# GITHUB_ORG=your-org-name

# Optional: Google Cloud Storage bucket name for storing reports
# BUCKET_NAME=your-bucket-name

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable/disable debug mode for Flask (true or false)
DEBUG=false

# Port for the web server
PORT=8080

# Optional: Reports directory location (Default: 'reports')
# REPORTS_DIR=reports

# Optional: Limit the number of repositories processed (for testing/debugging)
# REPO_LIMIT=50